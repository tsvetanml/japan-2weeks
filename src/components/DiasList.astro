---
import {dias} from "../lib/data";
---

<table class="table-auto text-left min-w-full">
    <tbody>
    {
        dias.map((song, index) => (
                <tr class="group hover:bg-gray-500/20 cursor-pointer">
                    <td class="whitespace-nowrap px-2 md:px-4 py-2 text-gray-300">Dia {index + 1}</td>
                    <td class="whitespace-nowrap px-2 md:px-4 py-2 flex gap-3 items-center">
                        <div class="h-10 w-10">
                            <img
                                    src={song.image}
                                    alt={song.title}
                                    class="rounded object-cover h-full w-full shadow-[5px_0_30px_0px_rgba(0,0,0,0.3)]"
                            />
                        </div>
                        <div class="leading-none">
                            <a
                                    href=`/itinerario/days/day${index + 1}`
                                    class="text-gray-300 truncate group-hover:text-white hover:underline text-sm"
                            >
                              {song.title}
                            </a>
                           <a class="md:hidden block">{song.city}</a>
                        </div>
                    </td>
                    <!--hidden md:inl-->
                    <td class="hidden md:table-cell whitespace-nowrap px-4 py-2">
                        <a
                                href="#"
                                class="text-gray-300 group-hover:text-white hover:underline text-sm"
                        >
                            {song.city}
                        </a>
                    </td>
                </tr>
        ))
    }
    </tbody>
</table>
